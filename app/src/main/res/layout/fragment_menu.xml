<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/glipp_light"
    >

    <LinearLayout android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/badges_picture"
                android:alpha="0.25"
                android:scaleType="centerCrop"
                />
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:src="@drawable/sec_logo"
                />
        </RelativeLayout>

        <View style="@style/HorizontalLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <LinearLayout android:id="@+id/agenda"
            style="@style/MainMenuItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:src="@drawable/ic_icon_agenda"
                style="@style/MainMenuItemIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <com.futurice.festapp.android.views.TTFTextView
                android:text="Agenda"
                style="@style/MainMenuItemText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <View style="@style/HorizontalLineSideMargins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <LinearLayout android:id="@+id/keytalks"
            style="@style/MainMenuItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:src="@drawable/ic_icon_key_talks"
                style="@style/MainMenuItemIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <com.futurice.festapp.android.views.TTFTextView
                android:text="Key talks"
                style="@style/MainMenuItemText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <View style="@style/HorizontalLineSideMargins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <LinearLayout android:id="@+id/venue"
            style="@style/MainMenuItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:src="@drawable/ic_icon_venue"
                style="@style/MainMenuItemIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <com.futurice.festapp.android.views.TTFTextView
                android:text="Venue"
                style="@style/MainMenuItemText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <View style="@style/HorizontalLineSideMargins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <LinearLayout android:id="@+id/info"
            style="@style/MainMenuItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:src="@drawable/ic_icon_info"
                style="@style/MainMenuItemIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <com.futurice.festapp.android.views.TTFTextView
                android:text="Info"
                style="@style/MainMenuItemText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
