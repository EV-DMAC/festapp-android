<LinearLayout
    style="@style/ContentContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <!--<ListView android:id="@+id/list_events"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--/>-->

    <TextView
        android:id="@+id/title"
        style="@style/ContentText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <!--<ImageView-->
        <!--android:id="@+id/timelineVerticalBg"-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="@dimen/timeline_vertical_line_height"-->
        <!--android:scaleType="fitXY"-->
        <!--android:background="#660044"-->
        <!--/>-->

    <!--<ImageView-->
        <!--android:id="@+id/timelineWoodenBg"-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="@dimen/spacing_large"-->
        <!--android:layout_below="@id/timelineVerticalBg"-->
        <!--android:scaleType="fitXY"-->
        <!--android:background="@color/blue"-->
        <!--/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:id="@+id/stageLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="top"
            android:background="@color/black"
            >

            <TextView
                style="@style/AgendaLocation"
                android:text="Galerie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                style="@style/AgendaLocation"
                android:text="Raum 2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                style="@style/AgendaLocation"
                android:text="Raum 3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                style="@style/AgendaLocation"
                android:text="Loft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                style="@style/AgendaLocation"
                android:text="Raum 5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                style="@style/AgendaLocation"
                android:text="Atelier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <HorizontalScrollView
            android:id="@+id/timelineScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadingEdge="none"
            android:scrollbarThumbHorizontal="@drawable/scroll_thumb"
            >

            <RelativeLayout
                android:id="@+id/timeGridContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <!-- Time/hour -lines -->
                <RelativeLayout
                    android:id="@+id/RelativeLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    >

                    <LinearLayout
                        android:id="@+id/timelineNumbers"
                        style="@style/ContentText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:adjustViewBounds="true"
                        android:orientation="horizontal"
                        />

                    <LinearLayout
                        android:id="@+id/timelineVerticalLines"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="@dimen/spacing_normal"
                        android:orientation="horizontal"
                        />

                    <LinearLayout
                        android:id="@+id/timelineNow"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="@dimen/spacing_normal"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/timelineNowMargin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />

                        <include layout="@layout/timeline_now_marker"/>
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/RelativeLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_normal"
                    >

                    <LinearLayout
                        android:id="@+id/gigLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:orientation="vertical"
                        />
                </RelativeLayout>

            </RelativeLayout>
        </HorizontalScrollView>
    </LinearLayout>

</LinearLayout>
